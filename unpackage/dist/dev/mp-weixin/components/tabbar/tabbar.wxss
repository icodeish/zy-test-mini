.uni-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  height: calc(100rpx + env(safe-area-inset-bottom)) !important;
  padding-bottom: calc(env(safe-area-inset-bottom)) !important;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0px 0px 17rpx 1rpx rgba(206, 206, 206, 0.32);
}
.uni-tabbar .tabbar_find {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.uni-tabbar .tabbar_find .find_icon {
  width: 60px;
  height: 55px;
  margin-top: -30px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  box-shadow: 0px 0px -17rpx 1rpx rgba(206, 206, 206, 0.32);
}
.uni-tabbar .tabbar_find .find_icon .icon {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.uni-tabbar .tabbar_find .find_icon .icon image {
  width: 50px;
  height: 50px;
}
.uni-tabbar .tabbar_find .find_icon .icon .select_img {
  -webkit-animation: tabbar-item-button-click 0.2s forwards 1 !important;
          animation: tabbar-item-button-click 0.2s forwards 1 !important;
}
.uni-tabbar .tababr_item {
  font-size: 20rpx;
  text-align: center;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.uni-tabbar .tababr_item .tag {
  position: absolute;
  right: 20px;
  top: 5px;
  padding: 4rpx;
  width: 12px;
  height: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: red;
  font-size: 24rpx;
  border-radius: 50%;
  color: #fff;
}
.uni-tabbar .tababr_item .tabbar_icon {
  height: 25px;
  width: 25px;
}
.uni-tabbar .tababr_item .tabbar_icon .select_img {
  -webkit-animation: tabbar-item-button-click 0.2s forwards 1;
          animation: tabbar-item-button-click 0.2s forwards 1;
}
.uni-tabbar .tababr_item .tabbar_icon image {
  width: 100%;
  height: 100%;
}
.uni-tabbar .tababr_item .tababr_text {
  line-height: 24rpx;
  font-size: 24rpx;
  margin-top: 2px;
  color: #999;
}
.uni-tabbar .tababr_item .textActive {
  color: green;
}
/* 点击动画 start */
@-webkit-keyframes tabbar-item-button-click {
from {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
}
to {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes tabbar-item-button-click {
from {
    -webkit-transform: scale(0.5);
            transform: scale(0.5);
}
to {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}

